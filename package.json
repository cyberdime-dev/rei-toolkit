{
  "name": "rei-toolkit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "concurrently \"npm run firebase:emulators\" \"vite\"",
    "dev:local": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest --reporter=verbose",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext vue,js,jsx,cjs,mjs,ts,tsx,cts,mts --fix --ignore-path .gitignore",
    "firebase:emulators": "firebase emulators:start --only firestore,auth",
    "firebase:emulators:ui": "firebase emulators:start --only firestore,auth --inspect-functions",
    "firebase:deploy": "firebase deploy",
    "firebase:init": "firebase init",
    "backup:create": "node scripts/backup.js create",
    "backup:restore": "node scripts/backup.js restore"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@stripe/stripe-js": "^7.9.0",
    "chart.js": "^4.4.9",
    "firebase": "^12.2.1",
    "jspdf": "^3.0.2",
    "lodash-es": "^4.17.21",
    "stripe": "^18.5.0",
    "vue": "^3.5.13",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.5.1",
    "vuetify": "^3.8.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.2.1",
    "deepmerge": "^4.3.1",
    "eslint": "^9.35.0",
    "eslint-plugin-vue": "^10.4.0",
    "firebase-tools": "^14.15.2",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.89.0",
    "sass-loader": "^16.0.5",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.6"
  }
}
