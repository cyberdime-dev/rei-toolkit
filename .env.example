# Firebase Configuration
# Copy this file to .env.local and fill in your actual Firebase project values
# Get these values from Firebase Console > Project Settings > General tab

VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-ABCDEF123

# Environment Configuration
VITE_NODE_ENV=development
VITE_APP_NAME=REI Toolkit
VITE_APP_VERSION=0.0.0

# Firebase Emulator Configuration (for local development)
VITE_USE_FIREBASE_EMULATORS=true
VITE_FIREBASE_EMULATOR_HOST=localhost
VITE_FIRESTORE_EMULATOR_PORT=8080
VITE_AUTH_EMULATOR_PORT=9099

# Performance & Analytics
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ERROR_REPORTING=true

# Feature Flags
VITE_ENABLE_OFFLINE_SUPPORT=true
VITE_ENABLE_REAL_TIME_SYNC=true
VITE_ENABLE_AUTO_BACKUP=true

# Production Environment Variables (set these in Vercel dashboard)
# VITE_FIREBASE_API_KEY=production-api-key
# VITE_FIREBASE_AUTH_DOMAIN=production-project.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=production-project-id
# VITE_USE_FIREBASE_EMULATORS=false
